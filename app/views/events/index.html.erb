<% provide(:title, "All events") %>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= will_paginate %>
		<h2>All Events</h2>
		<% @events.each do |event| %>
			<div class="event">
				<p>Event name: <%= link_to event.name, event %></p>
				<p>Event date: <%= event.date.strftime('%B %e, %Y') %> at <%= event.time.strftime('%I:%M %p') %></p>
				<p>Event location: <%= event.location %></p>
				<p>Event host: <%= link_to event.host.name, event.host %></p>
			</div>
		<% end %>
		<%= will_paginate %>
	</div>
</div>